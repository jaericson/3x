#!/usr/bin/env bash
set -eu

./customize .build/ 3x.sh <<PARAMS
@BINDIR@=$BINDIR
@TOOLSDIR@=$TOOLSDIR
@LIBDIR@=$LIBDIR
@DATADIR@=$DATADIR
@GUIDIR@=$GUIDIR
@DOCSDIR@=$DOCSDIR
PARAMS
chmod +x .build/3x.sh

for c in *.coffee; do
    x=.build/${c%.coffee}
    { echo "#!/usr/bin/env node"; coffee -p "$c"; } >"$x"
    chmod +x "$x"
done

cd .build
ln -sf ../package.json .
date >README.md
npm install

#!/usr/bin/env bash
# 3x-stop -- stop executing the current queue
# 
# > 3x stop
#
# Author: Jaeho Shin <netj@cs.stanford.edu>
# Created: 2012-11-17
set -eu

# TODO we probably need to call queue-stop for all runners
. "$TOOLSDIR"/find-queue-runner.sh
export queue queueDir

cd "$queueDir"

setsid queue-stop "$@"

# mark as stopped
rm -f started
